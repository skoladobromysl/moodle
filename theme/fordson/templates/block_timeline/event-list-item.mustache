{{!
    @template block_timeline/event-list-item

    This template renders an event list item for the timeline block.

    Example context (json):
    {
        "name": "Assignment due 1",
        "url": "https://www.google.com",
        "timesort": 1490320388,
        "course": {
            "fullnamedisplay": "Course 1"
        },
        "action": {
            "name": "Submit assignment",
            "url": "https://www.google.com",
            "itemcount": 1,
            "showitemcount": true,
            "actionable": true
        },
        "icon": {
            "key": "icon",
            "component": "mod_assign",
            "alttext": "Assignment icon"
        }
    }
}}
<div class="list-group-item flex-column py-2 pl-0 pr-0 border-0"
    data-region="event-list-item"
    >
    <div class="d-flex">
        <div class="icon-size-4 align-self-top my-1">
            {{#icon}}{{#pix}} {{key}}, {{component}}, {{alttext}} {{/pix}}{{/icon}}
        </div>
        <div class="w-100 event-name-container text-truncate line-height-2 row justify-content-between align-items-center flex-wrap">
            <a href="{{url}}"
               title={{#quote}}{{{name}}}{{/quote}}
               class="col-md-6 col-xs-11"
               aria-label='{{#str}} ariaeventlistitem, block_timeline, { "name": {{#quote}}{{{name}}}{{/quote}}, "course": {{#quote}}{{{course.fullnamedisplay}}}{{/quote}}, "date": "{{#userdate}} {{timesort}}, {{#str}} strftimedatetime, core_langconfig {{/str}} {{/userdate}}" } {{/str}}'
            ><h6 class="event-name text-truncate my-1">{{{name}}}</h6></a>
            {{#course.fullnamedisplay}}
            <h6 class="text-muted text-truncate my-1 col-md-2 col-xs-6">{{{course.fullnamedisplay}}}</h6>
            {{/course.fullnamedisplay}}
            {{#action.actionable}}
            <small class="my-1 col-md-2 col-xs-4">
                <a href="{{action.url}}" aria-label="{{action.name}}" title="{{action.name}}" class="list-group-item-action">{{{action.name}}}</a>
                {{#action.showitemcount}}
                <span class="badge badge-secondary">{{action.itemcount}}</span>
                {{/action.showitemcount}}
            </small> 
            <h6 class="text-right text-nowrap my-1 col-md-1 col-xs-2">
                {{#userdate}} {{timesort}}, {{#str}} strftimetime24, core_langconfig {{/str}} {{/userdate}}
            </h6>
            {{/action.actionable}}
        </div>

    </div>
</div>
